<Page
    x:Class="TutorApp.Views.HomePage.Dashboard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TutorApp.Views.HomePage"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <Grid Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
               Text="WeLearn"
               TextAlignment="Left"
               FontSize="30"
               FontWeight="SemiBold"
               Margin="30,10,30,10"/>
            
            <Grid Grid.Column="1">
                <AutoSuggestBox x:Name="SearchBox" 
                        PlaceholderText="Search"
                        Width="300"
                        Height="30"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        QuerySubmitted="SearchBox_QuerySubmitted"
                        TextChanged="SearchBox_TextChanged"/>
            </Grid>

            <Grid Grid.Column="2"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center"
                  Margin="0, 0, 20, 0">
                <ComboBox x:Name="CategoryFilter" 
                          SelectionChanged="CategoryFilter_SelectionChanged"
                          Width="200"
                          Height="30">
                    <ComboBoxItem Content="Start time"/>
                    <ComboBoxItem Content="Subject name"/>
                </ComboBox>
            </Grid>
            
            <Button Grid.Column="3" 
                Margin="0,0,10,0" 
                Click="Notification_Click">
                  <Path Data="M160 368c26.5 0 48 21.5 48 48v16l72.5-54.4c8.3-6.2 18.4-9.6 28.8-9.6H448c8.8 0 16-7.2 16-16V64c0-8.8-7.2-16-16-16H64c-8.8 0-16 7.2-16 16V352c0 8.8 7.2 16 16 16h96zm48 124l-.2 .2-5.1 3.8-17.1 12.8c-4.8 3.6-11.3 4.2-16.8 1.5s-8.8-8.2-8.8-14.3V474.7v-6.4V468v-4V416H112 64c-35.3 0-64-28.7-64-64V64C0 28.7 28.7 0 64 0H448c35.3 0 64 28.7 64 64V352c0 35.3-28.7 64-64 64H309.3L208 492z"
                  Fill="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                  Width="24"
                  Height="24"
                  Stretch="Uniform"
                  UseLayoutRounding="True"/>
            </Button>

            <Button Grid.Column="4" 
                Margin="0,0,10,0" 
                Click="Messages_Click">
                <Path Data="M 289.7 403 c -6.1 0 -11.4 4.2 -12.7 10.2 c -1 4.5 -2.7 8.2 -5 10.9 c -1.3 1.5 -5.1 5.9 -16.1 5.9 c -11 0 -14.8 -4.5 -16.1 -5.9 c -2.3 -2.7 -4 -6.4 -5 -10.9 c -1.3 -6 -6.6 -10.2 -12.7 -10.2 c -8.4 0 -14.5 7.8 -12.7 15.9 c 5 22.3 21 37.1 46.5 37.1 s 41.5 -14.7 46.5 -37.1 c 1.8 -8.1 -4.4 -15.9 -12.7 -15.9 Z M 412 352.2 c -15.4 -20.3 -45.7 -32.2 -45.7 -123.1 c 0 -93.3 -41.2 -130.8 -79.6 -139.8 c -3.6 -0.9 -6.2 -2.1 -6.2 -5.9 v -2.9 c 0 -13.3 -10.8 -24.6 -24 -24.6 h -0.6 c -13.2 0 -24 11.3 -24 24.6 v 2.9 c 0 3.7 -2.6 5 -6.2 5.9 c -38.5 9.1 -79.6 46.5 -79.6 139.8 c 0 90.9 -30.3 102.7 -45.7 123.1 c -9.9 13.1 -0.5 31.8 15.9 31.8 h 280.1 c 16.1 0 25.4 -18.8 15.6 -31.8 Z m -39 5.8 H 139.8 c -3.8 0 -5.8 -4.4 -3.3 -7.3 c 7 -8 14.7 -18.5 21 -33.4 c 9.6 -22.6 14.3 -51.5 14.3 -88.2 c 0 -37.3 7 -66.5 20.9 -86.8 c 12.4 -18.2 27.9 -25.1 38.7 -27.6 c 8.4 -2 14.4 -5.8 18.6 -10.5 c 3.2 -3.6 8.7 -3.8 11.9 -0.2 c 5.1 5.7 12 9.1 18.8 10.7 c 10.8 2.5 26.3 9.4 38.7 27.6 c 13.9 20.3 20.9 49.5 20.9 86.8 c 0 36.7 4.7 65.6 14.3 88.2 c 6.5 15.2 14.4 25.9 21.5 33.9 c 2.2 2.7 0.4 6.8 -3.1 6.8 Z"
                    Fill="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                    Width="24"
                    Height="24"
                    Stretch="Uniform"
                    UseLayoutRounding="True"/>
            </Button>

            <Ellipse Grid.Column="5"
                 Width="30" 
                 Height="30" 
                 Stroke="Gray" 
                 StrokeThickness="1" 
                 Margin="0,0,20,0"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center">
                <Ellipse.Fill>
                    <ImageBrush ImageSource="Assets/avatar.png" Stretch="UniformToFill"/>
                </Ellipse.Fill>
            </Ellipse>
        </Grid>


        <NavigationView Grid.Row="1"
                        x:Name="nvSample9"
                        IsPaneOpen="True"
                        OpenPaneLength="150" 
                        PaneDisplayMode="LeftCompact"
                        SelectionChanged="NavigationView_SelectionChanged">

            <NavigationView.MenuItems>
                <NavigationViewItemHeader Content="Main" />
                <NavigationViewItem Content="Home" Tag="HomePage" Icon="Home" />
                <NavigationViewItem Content="Messages" Tag="MessagesPage" Icon="Mail" />
                <NavigationViewItemSeparator />
                <NavigationViewItemHeader Content="Your Sessions" />
                <NavigationViewItem Content="Session 1" Tag="SessionPage" Icon="Bookmarks" />
                <NavigationViewItem Content="Session 2" Tag="SessionPage" Icon="Bookmarks" />
            </NavigationView.MenuItems>

            
            <NavigationView.FooterMenuItems>
                <NavigationViewItem Content="Tutor" Tag="TutorPage" Icon="OtherUser" />
                <NavigationViewItem Content="Account" Tag="AccountPage" Icon="Contact" />
                <NavigationViewItem Content="Help" Tag="HelpPage" Icon="Help" />
            </NavigationView.FooterMenuItems>

            <Frame x:Name="contentFrame" Background="AntiqueWhite"/>

        </NavigationView>

    </Grid>
</Page>
