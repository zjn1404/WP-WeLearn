<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="TutorApp.Views.Register"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TutorApp.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel Orientation="Vertical"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Padding="50,40"
                CornerRadius="20"
                BorderThickness="1"
                BorderBrush="Black"
                Background="#FFFFFFFF"
                >
        <TextBlock TextAlignment="Center" Margin="0,0,0,2" FontSize="25" FontWeight="Bold" Text="REGISTER"/>
        <FontIcon Glyph="&#xE7BE;" FontSize="80"/>
        <TextBlock TextAlignment="Center" Margin="0,0,0,50" FontSize="15" FontWeight="Bold" Text="WELCOME TO WELEARN"/>

        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="5">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="10">
                <TextBox Width="160" Name="firstnameTextBox"
                         Header="Firstname:"  PlaceholderText="Enter your firstname"/>
                <TextBox Width="160" Name="lastnameTextBox"
                         Header="Lastname:" PlaceholderText="Enter your lastname"/>

            </StackPanel>
            <TextBox Name="emailTextBox"
                     Header="Email:"
                     PlaceholderText="Enter your email"/>
            <PasswordBox Name="passwordTextBox"
                         Header="Password:"
                         PlaceholderText="Enter your password"/>
            <PasswordBox Name="confirmPasswordTextBox"
              Header="Confirm Password:"
              PlaceholderText="Enter confirm password"/>


        </StackPanel>
        <StackPanel Margin="10,0,0,0" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
            <TextBlock Text="You have an account?" VerticalAlignment="Center"/>
            <HyperlinkButton VerticalAlignment="Center" x:Name="loginButton"
                             Margin="140,0,0,0" HorizontalAlignment="Right" Click="loginButton_Click">Login</HyperlinkButton>
        </StackPanel>
        <Button x:Name="registerButton" Height="40"
                Click="registerButton_Click" Width="Auto" HorizontalAlignment="Stretch">Register</Button>
    </StackPanel>
</Page>
